{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext", "es2018", "es2015"],
    "types": ["vite/client", "vite-plugin-svgr/client"],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules", "./types", "./node_modules/@types"],
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/*"],
      "@components/*": ["frontend/components/*"],
      "@services/*": ["frontend/services/*"],
      "@types/*": ["frontend/types/*"],
      "@database/*": ["frontend/database/*"],
      "@redux/*": ["frontend/redux/*"],
      "@assets/*": ["frontend/assets/*"],
      "@pages/*": ["frontend/pages/*"],
      "@hooks/*": ["frontend/pages/hooks/*"],
      "@workers/*": ["frontend/pages/workers/*"],
      "@common/*": ["frontend/common/*"],
      "@candid/*": ["frontend/candid/*"]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "extends": "./tsconfig.paths.json",
  "include": ["frontend", "types"],
  "exclude": ["node_modules", "dist/**/*"]
}
